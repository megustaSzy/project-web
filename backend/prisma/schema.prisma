generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(50)
  email     String   @unique
  password  String
  role      Role     @default(User)
  orders    tb_order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum Role {
  Admin
  User
}

model tb_destination {
  id            Int        @id @default(autoincrement())
  name          String
  notelp        String     
  description   String?
  imageUrl      String?
  price         Int
  location      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  orders        tb_order[]
}

model tb_order {
  id          Int       @id @default(autoincrement())
  userId      Int
  destinationId Int
  jadwal      String
  quantity    Int
  totalPrice  Int
  status      Status @default(Pending)
  createdAt   DateTime  @default(now())

  user        tb_user     @relation(fields: [userId], references: [id])
  destination tb_destination    @relation(fields: [destinationId], references: [id])
}

enum Status {
  Pending
  Paid
}
