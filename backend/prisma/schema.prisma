generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_user {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(50)
  email     String   @unique
  password  String
  role      Role     @default(User)
  bookings  tb_booking[] // relasi pemesanan
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  Admin
  User
}

model tb_destination {
  id              Int       @id @default(autoincrement())
  name            String    @db.VarChar(50)
  description     String?   @db.Text
  location        String    @db.VarChar(120)
  imageUrl        String?   @db.VarChar(255)
  price           Int
  pickupLocations tb_pickup_location[] // relasi lokasi penjemputan
  bookings        tb_booking[]         // relasi pemesanan
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model tb_pickup_location {
  id             Int               @id @default(autoincrement())
  name           String            @db.VarChar(100)
  address        String?           @db.VarChar(200)
  destinationId  Int
  destination    tb_destination    @relation(fields: [destinationId], references: [id]) 
}

